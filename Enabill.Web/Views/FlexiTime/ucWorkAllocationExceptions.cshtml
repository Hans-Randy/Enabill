@model List<Enabill.Models.Dto.WorkAllocationExceptionModel>

    <table class="subTable underline fullWidth">
        <tr class="general">
            <th width="20%">Date</th>
            <th width="80%">Reason</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="2" class="center">
                    You have no workallocation exceptions
                </td>
            </tr>
        }
        @foreach (var wae in Model.OrderBy(w => w.WorkDate))
        {
            <tr>
                <td width="20%">@Html.ActionLink(wae.WorkDate.ToDisplayString(), "Day", "Time", new { dateString = wae.WorkDate.ToDisplayString() }, null)</td>
                <td width="50%">@wae.ExceptionDetail</td>
            </tr>
        }
    </table>