@model List<Enabill.Web.Models.UserFlexiBalanceModel>

<h4 class="center">FlexiBalances</h4>

<table class="underline fullWidth">
    <tr class="general">
        <th>User</th>
        <th>FlexiBalance</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="30" class="center">There are no FlexiBalances to display</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserFullName</td>
            <td>@item.FlexiBalance hours</td>
        </tr>
    }
    <tr>
        <td colspan="30" class="center">
            <input type="button" onclick="FlexiBalance.updateFlexiBalance(); return false;" value="Update FlexiBalance" />
        </td>
    </tr>
</table>