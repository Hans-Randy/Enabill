@model IEnumerable<Enabill.Models.RegionSearchResult>

@section head{
    @IncludeControllerScript(true)
}

@{ ViewBag.Title = "List of regions"; }

<div id="Index" class="marginView">
    @Html.TitleTable("tblRegions", string.Empty, "<b>Regions</b>", "", "ucIndexCol3", "", "ucIndexCol4", "", null, null)
    <div class="padView">

        @if (Model.Count() == 0)
        {
            @Html.Partial("ucNoSearchResults", "regions")
            return;
        }

        <table class="subTable general">
            <tr>
                <th></th>
                <th>Region</th>
                <th>Short Code</th>
                <th>Status</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.RegionID }) 
                    </td>
                    <td>
                        @item.RegionName
                    </td>
                    <td>
                        @item.RegionShortCode
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            @Html.Label("Active")
                        }
                        else
                        {
                            @Html.Label("Inactive")
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>