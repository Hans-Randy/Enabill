@model List<Enabill.Web.Models.UserLeaveModel>

    <table class="cleanTable fullWidth">
        <tr>
            <th>Leave Type</th>
            <th class="center">Leave Date From</th>
            <th class="center">Leave Date To</th>
            <th class="center">Leave Status</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td class="center" colspan="6">
                    There are no recent leave entries to display
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LeaveType</td>
                <td class="center">@item.LeaveDateFrom.ToExceptionDisplayString()</td>
                <td class="center">@item.LeaveDateTo.ToExceptionDisplayString()</td>
                <td class="center">@item.LeaveStatus</td>
            </tr>
        }
    </table>