@model List<Enabill.Models.Dto.WorkAllocationExceptionModel>
    <h2>
        Work Allocation Exceptions
    </h2>
    <table class="fullWidth general">
        @if (Model.Count() == 0)
        {
            <tr><th>There are no workallocation exceptions.</th></tr>
        }
        else
        {
            <tr>
                <th>User</th>
                <th>Work Date</th>
                <th>Exception Details</th>
            </tr>

            foreach (var wa in Model)
            {
                <tr>
                    <td>
                        @wa.UserName
                    </td>
                    <td>
                        @wa.WorkDate.ToDisplayString()
                    </td>
                    <td>
                        @wa.ExceptionDetail
                    </td>
                </tr>
            }
        }
    </table>